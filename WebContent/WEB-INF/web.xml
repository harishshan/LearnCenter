<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app metadata-complete="true" version="3.0"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <description>description</description>
 <display-name>Dynamic Assessment System</display-name>
 <icon>
  <small-icon>/images/images.jpg</small-icon>
  <large-icon>/images/images.jpg</large-icon>
 </icon>
 <module-name>Assessment Engine</module-name>
 <context-param>
  <param-name>dburl</param-name>
  <param-value>jdbc:mysql://localhost:3306/exam</param-value>
 </context-param>
 <context-param>
  <param-name>driver</param-name>
  <param-value>com.mysql.jdbc.Driver</param-value>
 </context-param>
 <context-param>
  <param-name>password</param-name>
  <param-value>root</param-value>
 </context-param>
 <context-param>
  <param-name>rootpath</param-name>
  <param-value>/ebooks/</param-value>
 </context-param>
 <!-- Context Param -->
 <context-param>
  <param-name>username</param-name>
  <param-value>root</param-value>
 </context-param>
 <listener>
  <listener-class>com.exam.listener.ConnectionFactory</listener-class>
 </listener>
 <!-- Servlet -->
 <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.exam.servlet.Login</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>forgetpassword</servlet-name>
  <servlet-class>com.exam.servlet.ForgetPassword</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>newuser</servlet-name>
  <servlet-class>com.exam.servlet.NewUser</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>searchebooks</servlet-name>
  <servlet-class>com.exam.servlet.SearchEBooks</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>download</servlet-name>
  <servlet-class>com.exam.servlet.DownloadEBooks</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>uploadebooks</servlet-name>
  <servlet-class>com.exam.servlet.UploadEBooks</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>feedback</servlet-name>
  <servlet-class>com.exam.servlet.Feedback</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>article</servlet-name>
  <servlet-class>com.exam.servlet.Article</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>questionupload</servlet-name>
  <servlet-class>com.exam.servlet.QuestionUpload</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>createpattern</servlet-name>
  <servlet-class>com.exam.servlet.CreatePattern</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>activatepattern</servlet-name>
  <servlet-class>com.exam.servlet.ActivatePattern</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>onlineexam</servlet-name>
  <servlet-class>com.exam.servlet.OnlineExam</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>changepassword</servlet-name>
  <servlet-class>com.exam.servlet.ChangePassword</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>rate</servlet-name>
  <servlet-class>com.exam.servlet.Rate</servlet-class>
 </servlet>
 <!-- Servlet Mapping -->
 <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>newuser</servlet-name>
  <url-pattern>/newuser</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>download</servlet-name>
  <url-pattern>/download</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>uploadebooks</servlet-name>
  <url-pattern>/uploadebooks</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>searchebooks</servlet-name>
  <url-pattern>/searchebooks</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>forgetpassword</servlet-name>
  <url-pattern>/forgetpassword</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>feedback</servlet-name>
  <url-pattern>/feedback</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>article</servlet-name>
  <url-pattern>/article</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>questionupload</servlet-name>
  <url-pattern>/questionupload</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>createpattern</servlet-name>
  <url-pattern>/createpattern</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>activatepattern</servlet-name>
  <url-pattern>/activatepattern</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>onlineexam</servlet-name>
  <url-pattern>/onlineexam</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>rate</servlet-name>
  <url-pattern>/rate</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>changepassword</servlet-name>
  <url-pattern>/changepassword</url-pattern>
 </servlet-mapping>
 <!-- Welcome File List -->
 <welcome-file-list>
  <welcome-file>home.jsp</welcome-file>
 </welcome-file-list>
 <!-- Error Page -->
 <error-page>
  <error-code>404</error-code>
  <location>/pageunderconstruction.jsp</location>
 </error-page>
 <error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/pageunderconstruction.jsp</location>
 </error-page>
</web-app>
